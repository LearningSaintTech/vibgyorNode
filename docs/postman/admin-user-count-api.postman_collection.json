              "raw": "{{baseUrl}}/admin/counts",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "counts"]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n  \"success\": true,\n  \"status\": 200,\n  \"message\": \"User counts fetched successfully\",\n  \"data\": {\n    \"totalUsers\": 24000,\n    \"verifiedUsers\": 18000,\n    \"verificationPending\": 2400\n  }\n}"
