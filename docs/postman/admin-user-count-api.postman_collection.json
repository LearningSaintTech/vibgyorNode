  "item": [
    {
      "name": "Get User Counts",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}",
            "type": "text",
            "description": "Admin access token"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/admin/counts",
          "host": ["{{baseUrl}}"],
          "path": ["admin", "counts"]
        },
        "description": "Get user counts including total users, verified users, and verification pending users. Requires admin authentication."
      },
      "response": [
        {
