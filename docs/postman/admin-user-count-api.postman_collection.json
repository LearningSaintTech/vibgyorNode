      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has success field\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('success');",
              "});",
              "",
              "pm.test(\"Response has data with counts\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('data');",
              "    pm.expect(jsonData.data).to.have.property('totalUsers');",
              "    pm.expect(jsonData.data).to.have.property('verifiedUsers');",
              "    pm.expect(jsonData.data).to.have.property('verificationPending');",
              "});",
              "",
              "pm.test(\"Counts are numbers\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.totalUsers).to.be.a('number');",
              "    pm.expect(jsonData.data.verifiedUsers).to.be.a('number');",
              "    pm.expect(jsonData.data.verificationPending).to.be.a('number');",
              "});",
              "",
              "pm.test(\"Verified users <= total users\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.verifiedUsers).to.be.at.most(jsonData.data.totalUsers);",
              "});",
              "",
              "pm.test(\"Verification pending <= total users\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.verificationPending).to.be.at.most(jsonData.data.totalUsers);",
              "});"
            ]
          }
        }
