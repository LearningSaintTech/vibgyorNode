						"url": {
							"raw": "{{base_url}}/subadmin/profiles?page=1&limit=10&search=&isActive=",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"subadmin",
								"profiles"
							],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "Page number (default: 1)",
									"disabled": false
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Items per page (default: 10)",
									"disabled": false
								},
								{
									"key": "search",
									"value": "",
									"description": "Search by firstName, lastName, email, phone",
									"disabled": true
								},
								{
									"key": "isActive",
									"value": "",
									"description": "Filter by active status (true/false)",
									"disabled": true
								}
							]
						},
						"description": "Get all subadmin profiles with pagination and search.\n\n**Authentication Required:** Admin JWT token\n\n**Query Parameters:**\n- `page`: Page number (default: 1)\n- `limit`: Items per page (default: 10)\n- `search`: Search by firstName, lastName, email, phone\n- `isActive`: Filter by active status (true/false)"
					},
					"response": []
